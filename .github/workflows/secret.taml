name: Advanced CI/CD

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - run: npm install
      - run: npm run build
      - uses: actions/upload-artifact@v4
        with:
          name: app-dist
          path: dist/

  test:
    runs-on: ubuntu-latest
    needs: build
    steps:
      - uses: actions/download-artifact@v4
        with:
          name: app-dist
      - run: npm test
      - uses: actions/upload-artifact@v4
        with:
          name: test-report
          path: reports/

  deploy:
    runs-on: ubuntu-latest
    needs: test
    environment: production
    steps:
      - uses: actions/download-artifact@v4
        with:
          name: app-dist
      - name: Deploy Application
        run: |
          echo "${{ secrets.PROD_DEPLOY_KEY }}" | ssh-add -
          ssh user@server "deploy-script.sh"
